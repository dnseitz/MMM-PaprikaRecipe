{% if loading %}

  <div class="dimmed light small">"Loading..."</div>

{% else %}

  <div class="container">
    <div class="title large">
      {% if recipe.photo_url %}
        <img class="img-cell" src="{{ recipe.photo_url }}"/>
      {% endif %}
      {{recipe.name }}
    </div>
    <div class="row">
      <div class="column ingredients">
        <ul>
        <lh>Ingredients</lh>
        {% for ingredient in recipe.ingredient_list %}
          <li class="small">{{ ingredient }}</td>
        {% endfor %}
        </ul>
      </div>
      <div class="column vertical-line"></div>
      <div class="column directions">
        <ol>
        <lh>Directions</lh>
        {% for step in recipe.directions %}
          <li class="small">{{ step }}</td>
        {% endfor %}
        </ol>
      </div>
    </div>
  </div>

{% endif %}
